    <script>
    window.addEventListener('DOMContentLoaded', (event) => {
      // coins list carousel
      var $coinscarousel = $('#coins-list');
      var coins = $coinscarousel.children().length;
      var coinwidth = (coins * 300); // 140px width for each client item 
      $coinscarousel.css('width',coinwidth);
      var rotating = true;
      var coinsspeed = 0;
      var seecoins = setInterval(rotateCoins, coinsspeed);
      $(document).on({
        mouseenter: function(){
          rotating = false; // turn off rotation when hovering
        },
        mouseleave: function(){
          rotating = true;
        }
      }, '#coins');
      function rotateCoins() {
        if(rotating != false) {
          var $first = $('#coins-list li:first');
          $first.animate({ 'margin-left': '-300px' }, 3000, "linear", function() {
            $first.remove().css({ 'margin-left': '0px' });
            $('#coins-list li:last').after($first);
          });
        }
      }
    });
